package com.bookflix.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

import com.bookflix.models.Book;
import com.bookflix.models.Users;
import com.bookflix.services.LendService;

@Controller
public class LendController {
	@Autowired
	LendService lendservice;
	
	@RequestMapping("/bookStatus")
	public String checkBookStatus(@ModelAttribute("book") Book book,@ModelAttribute("user") Users user) {
		this.lendservice.checkStatus(book,user);
		return "status";
	}
}
